{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <div class="row">

    <h1>Project :  {{ project.name }} </h1>
    <table class="table table-sm">
        <tbody>
            <tr>
                <th>Title</th>
                <td>{{ project.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ project.description }}</td>
            </tr>
            <tr>
                <th>createdAt the</th>
                <td>{% if project.createdAt %}{{ project.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>User</td>
            </tr>
        </tbody>
    </table><br>

{% if is_granted('ROLE_ADMIN') %}

            {{ form_start(delete_form) }}
                <input type="submit" value="Delete this project">
            {{ form_end(delete_form) }}

            <a href="{{ path('project_edit', { 'id': project.id }) }}"><button>Edit this project</button></a>

{% endif %}

        {% include 'comment/show.html.twig' %}

        {% include 'comment/new.html.twig' %}

    <br><br>
    <a href="{{ path('projects') }}"><button>Back to the list</button></a>
   </div>
</div>

{% endblock %}